<%- include('header', { title : "Könyvesch | Bejelentkezés |"}) -%>
<%- include('menu', { buttons: [ {name: "Regisztráció", ref: "/regisztracio"}] }) -%>
<div id="message">
    <h1>
        Üdvözlünk kedvenc könyvtárad megújult oldalán!
    </h1>
    <p>
        Jelentkezz be és máris böngészhetsz az elérhető könyveink közül!
    </p>
</div>
<div id="form">
    <fieldset>
        <form>
            <b>Bejelentkezés</b>
            <br>
            <input type=text id="ticket_id" name="ticket_id" placeholder="Kölcsönzőjegy azonosító">
            <br>
            <input type=password id="password" name="password" placeholder="Jelszó">
            <br>
            <input type=submit formmethod="post" formaction="/bejelentkezes" value="Bejelentkezek!">
            <input type=submit formmethod="post" formaction="/elfelejtett_jelszo" class="passwordreminder" value="Elfelejtettem a jelszavam">
            <div class="error"> <% if (typeof error !== 'undefined') { %> <%= error %> <% } %> </div>
        </form>
    </fieldset>
</div>
<%- include('footer') -%>